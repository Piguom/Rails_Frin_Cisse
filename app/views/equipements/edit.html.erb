<style type="text/css">
  .caption{
    box-shadow: 10px 10px #888888; border-radius: 150px; text-align: center; width:400px;
  }
</style>

<div>
   <div class="col-md-4">
     <div class="thumbnail" style="width:80%; border:none;">
        <div class="caption">
          <h3>
            Editing <%= @equipement.name %>
          </h3>
          <p>
            <%= render 'form' %>
          </p>
          <div style="display:inline; ">
              <%= button_to "Show", @equipement, :class => "btn btn-primary", :method => :get%>
              <%= button_to "Back", equipements_path, :class => "btn btn-warning", :method => :get%>
          </div>
        </div>
      </div>
   </div>
</div>